@model Ders

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">
				Ders Ekle
			</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<label asp-for="DersName"></label>
			<input asp-for="DersName" class="form-control"/>
			<span asp-validation-for="DersName" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DersKodu"></label>
			<input asp-for="DersKodu" class="form-control" />
			<span asp-validation-for="DersKodu" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px">
			Ekle
		</button>
		<a asp-controller="Ders" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Listeye Geri Dön
		</a>

	</div>

</form>

